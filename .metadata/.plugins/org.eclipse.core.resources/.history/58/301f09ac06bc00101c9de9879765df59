package fundamentos;

public class AreaCircunferencia {
	
	public static void main(String[] args) {
		double raio = 3.4;
		// Utilizando final antes do tipo, transforma variável em constante
		final double PI = 3.14159; //Ideal usar letras maiusculas para constantes
		
		double area = PI * raio * raio;
		// O atalho para a linha abaixo é syso
		System.out.println(area);
		
		raio = 10;
		area = PI * raio * raio;
		System.out.println("Área = " + area + "m2."); 
	}
}
